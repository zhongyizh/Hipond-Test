.tab-bar {
    backdrop-filter: blur(10px);
    background: white;
    bottom: 0;
    filter: drop-shadow(0 -2px 10px rgba(0,0,0,.06));
    left: 0;
    padding-bottom: env(safe-area-inset-bottom);
    position: fixed;
    right: 0;
    z-index: 999999;
}

.tab-bar,.tab-bar-item {
    display: flex;
}

.tab-bar-item {
    align-items: center;
    flex: 1;
    flex-direction: column;
    justify-content: center;
    position: relative;
}

.tab-bar-item-center {
    height: 132rpx;
    position: relative;
    width: 132rpx;
}

.tab-bar-item-image {
    height: 48rpx;
    position: relative;
    width: 48rpx;
}

.tab-bar-item-view {
    font-size: 20rpx;
    line-height: 36rpx;
}

.tab-bar-public {
    height: 55px;
    position: absolute;
    width: 100%;
}

.tab-bar-public,.tab-bar-public-background {
    align-items: center;
    border-radius: 50%;
    display: flex;
    justify-content: center;
}

.tab-bar-public-background {
    background-color: #85E4DC;
    box-shadow: 0 4px 12px rgba(51,51,51,.12);
    height: 56rpx;
    width: 56rpx;
}

.tab-bar-public-icon {
    height: 28rpx;
    width: 28rpx;
}

.tab-bar-badge {
    background: #ff5f5c;
    border-radius: 50%;
    height: 18rpx;
    position: absolute;
    right: 0;
    top: 0;
    width: 18rpx;
}