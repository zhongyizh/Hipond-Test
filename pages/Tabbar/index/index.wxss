/* pages/Tabbar/index.wxss */

scroll-view 
{
    margin-top: 46px;
}
  
.grid-box {
    padding: 10px;
    border-radius: 8px;
    background-color: #f5f5f5;
}
  
.grid-box image {
    width: 100%;
}
  
.content-box {
    padding-top: 10px;
}
  
.profile-text {
    display: flex;
    flex-direction: row;
    padding-top: 4px;
    /* justify-content: center; */
    align-items: center;
}
  
.profile-text view {
    display: flex;
    color: #888;
    font-size: 14px;
    flex-direction: row;
    align-items: center;
}
  
.left {
    width: 70%;
}
.left .icon {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    margin-right: 4px;
}
.right {
    /* width: 30%; */
    text-align: right;
    color: #888;
    font-size: 14px;
}
  
.right .icon-collection {
    width: 16px;
    height: 16px;
    background-size: cover;
    opacity: .5;
    color: rgba(0,0,0,.5);
    margin: 0 3px;
}