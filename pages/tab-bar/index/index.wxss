.profile-text {
    display: flex;
    flex-direction: row;
    padding-top: 6px;
    /* justify-content: center; */
    align-items: center;
}
  
.profile-text view {
    display: flex;
    color: #888;
    font-size: 14px;
    flex-direction: row;
    align-items: center;
}
  
.left {
    width: 70%;
    min-height: 28px;
}
.left .icon {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    margin-right: 4px;
}
.view-count-container {
    /* width: 30%; */
    text-align: right;
    color: #888;
    font-size: 14px;
}
  
.view-count-container .view-count-image {
    width: 20px;
    height: 20px;
    background-size: cover;
    opacity: .5;
    color: rgba(0,0,0,.5);
    margin: 0 6px;
}

.index-header {
    background: #fff;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 80rpx;
    left: 0;
    padding-left: 0%;
    position: fixed;
    width: 100%;
    z-index: 9999;
}

.bottom-tab-bar {
		/* 只是为了给底部的tabbar留空间 */
    height: 89px;
    visibility: hidden;
}

