.header {
    align-items: flex-end;
    background-color: #fff;
    display: flex;
    height: 400rpx;
    margin-top: 50rpx;
    margin-bottom: 100rpx;
    width: 100%;
}

.header-image {
    align-items: center;
    background-color: #ffffff00;
    height: 250rpx;
    width: 250rpx;
}

.avatar {
    border-radius: 500rpx;
    height: 200rpx!important;
    width: 200rpx!important;
}

.info {
    display: flex;
    flex-direction: column;
    height: 120rpx;
    justify-content: center;
}

.info-title {
    color: #949494;
    height: 38rpx;
}

.info-text,.info-title {
    font-size: 28rpx;
    margin-left: 48rpx;
}

.info-text {
    color: #333;
    font-weight: 700;
    height: 60rpx;
    line-height: 60rpx;
    width: 600rpx;
}

.info-line {
    background-color: #f5f5f5;
    height: 1px;
    margin-bottom: 48rpx;
    margin-left: 48rpx;
}

.commit {
    align-items: center;
    background: #333;
    border-radius: 500rpx!important;
    bottom: 60rpx;
    color: #fff;
    display: flex;
    font-size: 28rpx;
    font-weight: 700;
    height: 90rpx;
    justify-content: center;
    left: 25%;
    position: fixed;
    width: 50%;
    z-index: 9;
}

.add_type {
    padding: 40rpx 48rpx 240rpx;
}

.add_type .tips {
    color: #949494;
    font-size: 32rpx;
    font-weight: 400;
    height: 52rpx;
    line-height: 52rpx;
    margin-bottom: 8rpx;
}

.imgs-list {
    -webkit-overflow-scrolling: touch;
    align-items: flex-end;
    background: #fff;
    bottom: 0;
    box-sizing: border-box;
    display: flex;
    overflow-x: scroll;
    overflow-y: hidden;
    padding: 10rpx 10rpx 10rpx 0;
    position: relative;
    white-space: nowrap;
    z-index: 20;
}

.imgs-list::-webkit-scrollbar {
    display: none;
}

.imgs-list .imgs-item {
    background: no-repeat 50%/cover;
    border-radius: 16rpx;
    display: inline-block;
    height: 210rpx;
    margin: 0 7rpx;
    overflow: hidden;
    position: relative;
    width: 210rpx;
}

.imgs-item.imgs-bg {
    background: #f0f0f0;
}

.imgs-list .imgs-item image {
    height: 210rpx;
    width: 210rpx;
}

.imgs-list .imgs-item.add {
    background: #f5f5f5;
    border: 1px solid #f5f5f5;
    border-radius: 16rpx;
    box-sizing: border-box;
    position: relative;
}

.imgs-list .imgs-item.add::after {
    height: 40px;
    width: 2px;
}

.imgs-list .imgs-item.add::after,.imgs-list .imgs-item.add::before {
    background: #949494;
    content: "";
    display: block;
    left: 50%;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
}

.imgs-list .imgs-item.add::before {
    height: 2px;
    width: 40px;
}

.logo-camera {
    background: #333;
    border-radius: 50%;
    height: 48rpx;
    margin-left: 10rpx;
    width: 48rpx;
}

.go-back {
    position: absolute;
    top: 120rpx;
    left: 40rpx;
    width: 100rpx; 
    height: 40rpx; 
    z-index: 10;
}

.go-back-icon {
    width: 50%; 
    height: 100%;
}