.imgs-list {
    -webkit-overflow-scrolling: touch;
    align-items: flex-end;
    background: #fff;
    bottom: 0;
    box-sizing: border-box;
    display: flex;
    overflow-x: scroll;
    overflow-y: hidden;
    padding: 10rpx 10rpx 10rpx 0;
    position: relative;
    white-space: nowrap;
    z-index: 20;
}

.imgs-list::-webkit-scrollbar {
    display: none;
}

.imgs-list .imgs-item {
    background: no-repeat 50%/cover;
    border-radius: 16rpx;
    display: inline-block;
    height: 210rpx;
    margin: 0 7rpx;
    overflow: hidden;
    position: relative;
    width: 210rpx;
}

.imgs-item.imgs-bg {
    background: #f0f0f0;
}

.imgs-list .imgs-item image {
    height: 210rpx;
    width: 210rpx;
}

.imgs-list .imgs-item.add {
    background: #f5f5f5;
    border: 1px solid #f5f5f5;
    border-radius: 16rpx;
    box-sizing: border-box;
    position: relative;
}

.imgs-list .imgs-item.add::after {
    height: 40px;
    width: 2px;
}

.imgs-list .imgs-item.add::after,.imgs-list .imgs-item.add::before {
    background: #949494;
    content: "";
    display: block;
    left: 50%;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
}

.imgs-list .imgs-item.add::before {
    height: 2px;
    width: 40px;
}

