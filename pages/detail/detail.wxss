/* pages/detail.wxss */

.container 
{
    display: flex;
    flex-direction: column;

    width: 100%;
	margin-top: 10%;
}

.go-back {
	position: absolute;
	top: 120rpx;
	left: 40rpx;
	width: 100rpx; 
	height: 40rpx; 
	z-index: 10;
}

.go-back-icon {
	width: 50%; 
	height: 100%;
}
  
.carousel 
{
    align-self: center;
    height: 300px;
    width: 100%;
    margin-bottom: 5%;
}

.carousel image {
    width: 100%;  
    height: 100%; 
}
  
.user-info 
{
    align-self: flex-start;

    display: flex;
    align-items: center;
    
    padding: 10px;
    margin-left: 4%;
}

.avatar 
{
    width: 60rpx;
    height: 60rpx;
    border-radius: 25px;
}
  
.nickname 
{
    font-size: 13pt;
    margin-left: 18rpx;
	color: #575757;
	letter-spacing: 5%;
	line-height: 24pt;
}
  
.post-text 
{
    align-self: flex-start;
    font-size: 13pt;
		margin-left: 6%;
		margin-right: 6%;
		letter-spacing: 5%;
		line-height: 24pt;
		margin-top: 8px;
}

.toolbar-right {
	position: fixed;
	right: 40rpx;
	bottom: 68rpx;
}

.like-button {
	width: 48rpx; 
	height: 48rpx;
	align-self: flex-end;
	padding-right: 40rpx;
}

.save-button {
	width: 48rpx; 
	height: 48rpx;
	align-self: flex-end;
	padding-right: 40rpx;
}