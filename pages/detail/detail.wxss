/* pages/detail.wxss */

.container 
{
    display: flex;
    flex-direction: column;

    width: 100%;
    margin-top: 10%;
}

.back-button 
{
    align-self: flex-start;

    font-size: 30rpx;
    font-weight: bold;

    margin-bottom: 5%;
    margin-top: -9%;
    margin-left: 4%;
}
.back-button:active 
{
    color: grey;
}
  
.carousel 
{
    align-self: center;
    height: 300px;
    width: 100%;
    margin-bottom: 5%;
}

.carousel image {
    width: 100%;  
    height: 100%; 
}
  
.user-info 
{
    align-self: flex-start;

    display: flex;
    align-items: center;
    
    padding: 10px;
    margin-left: 4%;
}

.avatar 
{
    width: 60rpx;
    height: 60rpx;
    border-radius: 25px;
}
  
.nickname 
{
    font-size: 30rpx;
    margin-left: 18rpx;

    color: grey;
}
  
.post-text 
{
    align-self: flex-start;

    font-size: 30px;
    font-weight: bold;
    margin-left: 6%;
}