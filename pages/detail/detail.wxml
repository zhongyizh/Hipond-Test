<!--pages/detail.wxml-->
<view class="container">
    <!-- Back Button -->
    <view class="back-button" bindtap="navigateBack">← 返回</view> 

    <!-- Image Carousel -->
    <swiper class="carousel" autoplay="true" interval="5000" duration="300" indicator-dots="true">
        <block wx:for="{{image_urls}}" wx:key="*this">
            <swiper-item>
                <image src="{{item}}" mode="aspectFit" />
            </swiper-item>
        </block>
    </swiper>

    <!-- User Information -->
    <view class="user-info">
        <image src="{{avatar_url}}" class="avatar" />
        <text class="nickname">{{nickname}}</text>
    </view>

    <!-- Post Text -->
    <view class="post-text">
        {{text}}
    </view>
</view>
