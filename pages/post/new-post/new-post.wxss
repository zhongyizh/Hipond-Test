/* pages/new-post/new-post.wxss */
.new-post-header {
    display: flex;
    justify-content: space-between;
    padding-top: 200rpx;
    padding-left: 15rpx; 
    padding-right: 15rpx; 
    height: 100rpx;
}

.new-post-cancel {
    font-size: small;
    color: grey;
    background: none;
    border: none;
    align-self: center; 
    max-width: 80px;
    max-height: 60px;
}

.new-post-button {
    color: #fff;
    background-color: #85e4dc;
    border: none;
    align-self: center; 
    font-size: 16px;
    max-width: 100px;
    max-height: 60px;
}
.new-post-textarea-container
{
    height: 500rpx; 
    min-height: 500rpx;
}
.new-post-textarea
{
    min-height: 100% !important;
}