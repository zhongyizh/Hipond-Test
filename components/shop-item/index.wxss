.shop-box {
    align-items: center;
    background-color: #f5f5f5;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    margin-bottom: 20rpx;
    position: relative;
    width: 335rpx;
}

.shop-box-cover {
    animation: fadeIn .6s ease;
    border-radius: 20rpx;
    width: 100%;
}

.shop-box .shop-info {
    backdrop-filter: blur(10px);
    background: hsla(0,0%,100%,.8);
    border-radius: 20rpx;
    bottom: 10rpx;
    left: 10rpx;
    padding: 20rpx;
    position: absolute;
    right: 10rpx;
}

.shop-info .shop-info-title {
    color: #333;
    font-size: 26rpx;
    font-weight: 700;
    margin-top: 12rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.shop-info .shop-info-duce {
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #444;
    display: -webkit-box;
    font-size: 22rpx;
    font-weight: 500;
    line-height: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
}

.info-bur {
    align-items: center;
    display: flex;
    justify-content: space-between;
}

.shop-info-price {
    color: #000;
    font-size: 20rpx;
    font-weight: bolder;
}

.shop-info-price text {
    font-size: 34rpx;
    margin-left: 6rpx;
}

.info-img {
    align-items: center;
    background: #000;
    border-radius: 68rpx;
    box-shadow: 5px 5px 5px -4px rgba(51,51,51,.3);
    display: flex;
    height: 68rpx;
    justify-content: center;
    width: 68rpx;
}

.info-img image {
    height: 32rpx;
    width: 32rpx;
}

.shop-info .shop-info-tag {
    align-items: center;
    display: flex;
}

.shop-info-tag .tag {
    background: rgba(51,51,51,.3);
    border-radius: 8rpx;
    color: #333;
    font-size: 20rpx;
    font-weight: 500;
    margin-right: 10rpx;
    padding: 2rpx 12rpx;
}