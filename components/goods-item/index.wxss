.shop-box {
    background-color: #fff;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
    width: 335rpx;
}

.shop-box-cover {
    animation: fadeIn .6s ease;
    border-radius: 20rpx 20rpx 0 0;
    width: 100%;
}

.shop-box .shop-info {
    display: flex;
    flex-direction: column;
    padding: 10rpx 20rpx;
    width: 295rpx;
}

.shop-info .shop-info-title {
    color: #333;
    font-size: 26rpx;
    font-weight: 700;
    margin-top: 12rpx;
}

.shop-info .shop-info-duce {
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #949494;
    display: -webkit-box;
    font-size: 22rpx;
    font-weight: 450;
    line-height: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
}

.shop-info .shop-info-vip-price {
    color: #000;
    font-size: 20rpx;
    font-weight: bolder;
    padding-top: 15rpx;
}

.shop-info-vip-price text {
    font-size: 34rpx;
    margin: 0 6rpx;
}

.shop-info .shop-info-price {
    color: #949494;
    font-size: 24rpx;
    font-weight: 500;
    padding-bottom: 20rpx;
}

.shop-info-price text {
    font-size: 26rpx;
    margin-left: 6rpx;
}

.shop-info .shop-info-tag {
    align-items: center;
    display: flex;
}

.shop-info-tag .tag {
    background: #f5f5f5;
    border-radius: 8rpx;
    color: #333;
    font-size: 20rpx;
    font-weight: 500;
    margin-right: 10rpx;
    padding: 2rpx 12rpx;
}